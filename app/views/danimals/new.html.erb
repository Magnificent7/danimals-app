<%= form_tag "/danimals", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br>

    <%= label_tag :description %>
    <%= text_area_tag :description %><br>

    <%= label_tag :species %>
    <%= text_field_tag :species %><br>

    <%= label_tag :leg_count %>
    <%= number_field_tag :leg_count %><br>

    <%= submit_tag "Create Danimal" %>
  </div>
<% end %>