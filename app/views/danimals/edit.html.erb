<%= form_tag "/danimals/#{@danimal.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @danimal.name %><br>

    <%= label_tag :description %>
    <%= text_area_tag :description, @danimal.description %><br>

    <%= label_tag :species %>
    <%= text_field_tag :species, @danimal.species %><br>

    <%= label_tag :leg_count %>
    <%= number_field_tag :leg_count, @danimal.leg_count %><br>

    <%= submit_tag "Edit Danimal" %>
  </div>
<% end %>